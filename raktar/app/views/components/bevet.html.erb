<div class="text-center">
    <h2><strong>Alkatrész Bevétele</strong></h2>
</div>
<br>

    Alkatrész száma: <%= @component.name %><br>
    Raktári készlet: <%= @component.inventory.to_s %> <br>
    Lokáció: <%= @component.location %><br>
    Típusa: <%= @component.componenttype.name %><br>
    Megjegyzés:<%= @component.comment %><br>
<br>
<br>
<%= form_tag bevet_component_path, :method => 'get' do %>
    <p>
      <%= field_set_tag do %>
        Bevett darabszám: 
        <%= number_field_tag :bevet, params[:bevet], :autofocus => true %>
        <%= submit_tag "Bevételezés", {class: "btn btn-primary"} %><br>
      <% end %>
    </p>
<% end %>

<br>
<br>
<%= button_to "Vissza", purchases_path , {class: "btn btn-warning", method: :get}%>
