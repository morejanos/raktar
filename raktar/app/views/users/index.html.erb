
<h1>Felhasználók</h1>

<table>
  <thead>
    <tr>
        <th>Név</th>
        <th>Jogok</th>
        <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.permission %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Megnéz', user %></td>
        <td><%= link_to 'Szerkeszt', edit_user_path(user) %></td>
        <td><%= link_to 'Töröl', user, method: :delete, data: { confirm: 'Biztos, hogy törölné szeretné?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
