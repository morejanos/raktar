<div class="text-center ">
    <h2><strong>Felhasználók</strong></h2>
</div>

<table id="datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Név</th>
      <th>Jogok</th>
      <th>Email</th>
      <% if can? :read, @users.first %> <th></th> <% end %>
      <% if can? :update, @users.first %> <th></th> <% end %>
      <% if can? :destroy, @users.first %> <th></th> <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.permission %></td>
        <td><%= user.email %></td>
        <% if can? :read, user %> <td> <%= link_to 'Megnéz', user %> </td> <% end %>
        <% if can? :update, user %> <td> <%= link_to 'Szerkeszt', edit_user_path(user) %></td> <% end %>
        <% if can? :destroy, user %> <td> <%= link_to 'Töröl', user, method: :delete, data: { confirm: 'Biztos, hogy töröli?' } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, User.first %>
  <%= button_to 'Új felhasználó', new_user_registration_path, {class: "btn btn-warning", method: :get } %> 
<% end %>

<br>
