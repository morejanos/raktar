<div class="text-center ">
    <h2><strong>Felhasználók</strong></h2>
</div>

<table id="datatables" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Név</th>
      <th>Jogok</th>
      <th>Email</th>
      <% if can? :update, User %> <th></th> <% end %>
      <% if can? :destroy, User %> <th></th> <% end %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user, user %></td>
        <td><%= user.permission %></td>
        <td><%= user.email %></td>
        <% if can? :update, User %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-pencil"></span>'.html_safe, edit_user_path(user) %></td> <% end %>
        <% if can? :destroy, User %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-trash"></span>'.html_safe, user, method: :delete, data: { confirm: 'Biztos, hogy töröli?' } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
