<div class="text-center">
    <h2><strong>Alkatrész típusok listája</strong></h2>
</div>

<table id="datatables" class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Neve</th>
      <% if can? :update, Componenttype %> <th></th> <% end %>
      <% if can? :destroy, Componenttype %> <th></th> <% end %>
    </tr>
  </thead>

  <tbody>
    <% @componenttypes.each do |componenttype| %>
      <tr>
        <td><%= link_to componenttype, componenttype %></td>
        <% if can? :update, Componenttype %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-pencil"></span>'.html_safe, edit_componenttype_path(componenttype) %></td> <% end %>
        <% if can? :destroy, Componenttype %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-trash"></span>'.html_safe, componenttype, method: :delete, data: { confirm: "Biztos, hogy töröli? (#{componenttype})" } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Componenttype %>
  <%= button_to 'Új alkatrésztípus', new_componenttype_path,{class: "btn btn-warning", method: :get }   %> 
<% end %>

