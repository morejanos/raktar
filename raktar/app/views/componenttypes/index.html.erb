
<h1>Alkatrész típusok listája</h1>

<table>
  <thead>
    <tr>
      <th>Neve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @componenttypes.each do |componenttype| %>
      <tr>
        <td><%= componenttype.name %></td>
        <td><%= link_to 'Megnéz', componenttype %></td>
        <td><%= link_to 'Szerkeszt', edit_componenttype_path(componenttype) %></td>
        <td><%= link_to 'Töröl', componenttype, method: :delete, data: { confirm: 'Biztos, hogy töröli?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Új alkatrésztípus felvétele', new_componenttype_path %>
