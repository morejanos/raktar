<h1>Tokozások listája</h1>

<table id="datatables">
  <thead>
    <tr>
      <th>Name</th>
      <% if can? :read, @packagings.first %> <th>Megnéz</th> <% end %>
      <% if can? :update, @packagings.first %> <th>Szekeszt</th> <% end %>
      <% if can? :destroy, @packagings.first %> <th>Töröl</th> <% end %>
    </tr>
  </thead>

  <tbody>
    <% @packagings.each do |packaging| %>
      <tr>
        <td><%= packaging.name %></td>
        <% if can? :read, packaging %> <td> <%= link_to 'Megnéz', packaging %> </td> <% end %>
        <% if can? :update, packaging %> <td> <%= link_to 'Szerkeszt', edit_packaging_path(packaging) %></td> <% end %>
        <% if can? :destroy, packaging %> <td> <%= link_to 'Töröl', packaging, method: :delete, data: { confirm: 'Biztos, hogy töröli?' } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @packagings.first %>
  <%= link_to 'Új tokozás', new_packaging_path %>
<% end %>
