<div class="text-center">
   <h2><strong>Gyártók Listája</strong></h2>
</div>

<table id="datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Név</th>
      <% if can? :read, @manufacturers.first %> <th></th> <% end %>
      <% if can? :update, @manufacturers.first %> <th></th> <% end %>
      <% if can? :destroy, @manufacturers.first %> <th></th> <% end %>
    </tr>
  </thead>
  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.name %></td>
        <% if can? :read, manufacturer %> <td> <%= link_to 'Megnéz', manufacturer %> </td> <% end %>
        <% if can? :update, manufacturer %> <td> <%= link_to 'Szerkeszt', edit_manufacturer_path(manufacturer) %></td> <% end %>
        <% if can? :destroy, manufacturer %> <td> <%= link_to 'Töröl', manufacturer, method: :delete, data: { confirm: 'Biztos, hogy töröli?' } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Manufacturer.first %>
  <%= button_to 'Új gyártó', new_manufacturer_path, {class: "btn btn-warning", method: :get } %> 
<% end %>
