<div class="text-center">
   <h2><strong>Gyártók Listája</strong></h2>
</div>

<table id="datatables" class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Név</th>
      <% if can? :update, Manufacturer %> <th></th> <% end %>
      <% if can? :destroy, Manufacturer %> <th></th> <% end %>
    </tr>
  </thead>
  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= link_to manufacturer, manufacturer %></td>
        <% if can? :update, Manufacturer %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-pencil"></span>'.html_safe, edit_manufacturer_path(manufacturer) %></td> <% end %>
        <% if can? :destroy, Manufacturer %> <td> <%= link_to '<span class="glyphicon-class glyphicon glyphicon-trash"></span>'.html_safe, manufacturer, method: :delete, data: { confirm: "Biztos, hogy töröli? (#{manufacturer})" } %> </td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Manufacturer %>
  <%= button_to 'Új gyártó', new_manufacturer_path, {class: "btn btn-warning", method: :get } %> 
<% end %>
